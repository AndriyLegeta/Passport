doctype html
html
    head
        title Session
    body
        if(!user)
            h3 Register
            form(action='/register' method='post')
                input(type='text' name='login')
                input(type='password' name='password')
                input(type='submit')
            h3 Login
            form(action='/login' method='post')
                input(type='text' name='login')
                input(type='password' name='password')
                input(type='submit')
        else
            a(href='/logout') Logout
            br
            a(href='/admin') Admin